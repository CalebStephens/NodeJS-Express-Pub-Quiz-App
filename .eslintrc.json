{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "js": "always"
            }
          ],
        "prettier/prettier": 2,
        "no-undef": "warn",
        "import/no-unresolved": "off",
        "arrow-body-style": "off",
        "no-nested-ternary": "off"
    },
    "plugins": ["prettier"]
}
